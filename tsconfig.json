{
  "compilerOptions": {
    "target": "ES2021",
    "useDefineForClassFields": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
  "module": "ESNext",
    "skipLibCheck": true,
    "jsx": "react-jsx",
  "moduleResolution": "bundler",
  "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowJs": false,
    "strict": true,
    "types": ["dompurify", "vite/client"],
    "baseUrl": ".",
    "paths": {
      "@canvas": ["components/modules/Canvas/runtime/index.ts"],
      "@canvas/*": ["components/modules/Canvas/runtime/*"],
      "@features/canvas/*": ["components/modules/Canvas/runtime/features/*"],
      "@/features/canvas/*": ["components/modules/Canvas/runtime/features/*"],
      "@/features/*": ["components/modules/Canvas/runtime/features/*"],
      "@/*": ["components/modules/Canvas/runtime/*"],
      "@canvas-utils/*": ["components/modules/Canvas/runtime/utils/*"],
      "@canvas-types": ["components/modules/Canvas/types/index.ts"],
      "@types": ["components/modules/Canvas/types/index.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"],
  "exclude": [
    "node_modules",
    "src-tauri",
    "archive",
    "archive/**/*",
    "Canvas_To_Implement",
    "Canvas_To_Implement/**/*",
    "components/modules/Canvas/runtime/**/__tests__/**/*",
    "components/modules/Canvas/runtime/**/test-results/**/*"
  ]
}
