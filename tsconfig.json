{
  "compilerOptions": {
    "target": "ES2021",
    "useDefineForClassFields": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowJs": false,
    "strict": true,
    "types": ["dompurify"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "src-tauri", "archive", "archive/**/*"]
}